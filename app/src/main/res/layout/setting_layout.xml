<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="cursive"
            android:text="Setting"
            android:textAlignment="center"
            android:textSize="36sp"
            android:textStyle="bold"
            android:layout_marginTop="18dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/ID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Controller ID : Loading..."
            android:textAlignment="center"
            android:textSize="20sp"
            android:layout_below="@+id/textView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="9dp" />

        <EditText
            android:id="@+id/SID"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/ID"
            android:layout_marginTop="11dp"
            android:ems="10"
            android:hint="Controller ID"
            android:inputType="number"
            android:textAlignment="center"
            android:layout_alignParentEnd="true" />

        <Button
            android:id="@+id/CID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/SID"
            android:background="@android:color/holo_green_light"
            android:text="change ID" />

        <Button
            android:id="@+id/CD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_red_dark"
            android:text="clear data"
            android:layout_below="@+id/CID"
            android:layout_alignParentStart="true"
            android:layout_marginTop="8dp"
            android:layout_alignParentEnd="true" />

        <TextView
            android:id="@+id/textView16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Oxygen Time On-Off :"
            android:textSize="20sp"
            android:layout_alignBaseline="@+id/TSO"
            android:layout_alignBottom="@+id/TSO"
            android:layout_alignStart="@+id/textView7" />

        <EditText
            android:id="@+id/TSO"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Minute"
            android:inputType="number"
            android:textAlignment="center"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/CD"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/textView16" />

        <Button
            android:id="@+id/BSO"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_orange_light"
            android:text="Setting Oxygen Time On-Off"
            android:textAlignment="center"
            android:layout_below="@+id/TSO"
            android:layout_alignParentStart="true"
            android:layout_marginTop="8dp"
            android:layout_alignParentEnd="true" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="16dp"
            android:text="Food Level Setting (cm) :"
            android:textAlignment="center"
            android:textSize="20sp"
            android:layout_below="@+id/BSO"
            android:layout_alignParentStart="true" />

        <EditText
            android:id="@+id/TSFL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="cm"
            android:inputType="textPersonName"
            android:textAlignment="center"
            android:layout_alignBaseline="@+id/textView7"
            android:layout_alignBottom="@+id/textView7"
            android:layout_toEndOf="@+id/textView7"
            android:layout_marginStart="13dp" />

        <Button
            android:id="@+id/BSFL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_blue_bright"
            android:text="Setting Food Level"
            android:textAlignment="center"
            android:layout_below="@+id/textView7"
            android:layout_alignParentStart="true"
            android:layout_marginTop="17dp"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>


</ScrollView>