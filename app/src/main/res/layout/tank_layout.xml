<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorBackgroundFloating">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/pump_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="30dp"
            android:text="Pond"
            android:textAlignment="center"
            android:textSize="36sp" />

        <TextView
            android:id="@+id/WLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="37dp"
            android:text="Water Level : Loading..."
            android:textSize="24sp"
            android:layout_below="@+id/pump_layout"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/PumpS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="Pump : Loading..."
            android:textSize="24sp"
            android:layout_below="@+id/WLevel"
            android:layout_alignLeft="@+id/WLevel"
            android:layout_alignStart="@+id/WLevel" />

        <TextView
            android:id="@+id/OxygenS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/PumpS"
            android:layout_alignStart="@+id/PumpS"
            android:layout_below="@+id/PumpS"
            android:layout_marginTop="40dp"
            android:text="Oxygen : Loading..."
            android:textSize="24sp" />
    </RelativeLayout>

</LinearLayout>